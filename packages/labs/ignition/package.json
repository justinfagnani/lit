{
  "name": "@lit-labs/ignition",
  "displayName": "Ignition",
  "description": "Advanced workflows for Lit",
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./extension.cjs",
  "contributes": {
    "customEditors": [
      {
        "viewType": "ignition.lit-module-editor",
        "displayName": "Lit Editor",
        "selector": [
          {
            "filenamePattern": "*.ts"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "ignition.hello",
        "title": "Hello Ignition"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run build",
    "build": "wireit",
    "pretest": "npm run build && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "wireit"
  },
  "dependencies": {
    "@lit-labs/analyzer": "^0.9.2",
    "@types/koa": "^2.13.8",
    "@types/koa-cors": "^0.0.2",
    "@web/dev-server": "^0.3.1",
    "koa": "^2.14.2",
    "koa-cors": "^0.0.16"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vscode/test-electron": "^2.3.4",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "wireit": {
    "build": {
      "command": "tsc --pretty",
      "dependencies": [
        "../analyzer:build"
      ],
      "files": [
        "src/**/*.ts",
        "tsconfig.json"
      ],
      "output": [
        "lib",
        "extension.{cjs}"
      ],
      "clean": "if-file-deleted"
    },
    "test": {
      "command": "node ./test/runTest.js",
      "dependencies": [
        "build"
      ]
    }
  }
}
